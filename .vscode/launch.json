{
  "configurations": [
    {
      "name": "(lldb) Launch client",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/client",
      "args": ["localhost", "5000"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "(lldb) Test",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/test",
      "args": ["${input:lldbArgs}"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "(lldb) Launch Server erwin",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/server",
      "args": ["erwin"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "(lldb) Launch Server levi",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/server",
      "args": ["levi"],
      "cwd": "${workspaceFolder}",
    },
  ],
  "inputs": [
    {
      "id": "lldbArgs",
      "type":"promptString",
      "description": "args for lldb",
      "default": ""
    },
  ],
  "version": "2.0.0"
}