{
  "configurations": [
    {
      "name": "(gdb) Test",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/test",
      "args": ["${input:lldbArgs}"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "(gdb) Launch Server",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/server",
      "args": ["erwin"],
      "cwd": "${workspaceFolder}",
    }
  ],
  "inputs": [
    {
      "id": "lldbArgs",
      "type":"promptString",
      "description": "args for lldb",
      "default": ""
    },
  ],
  "version": "2.0.0"
}