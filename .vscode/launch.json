{
  "configurations": [
    {
      "name": "(gdb) Launch server",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/server",
      "args": ["erwin"],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    },
    {
      "name": "(lldb) Test",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/test",
      "args": ["${input:lldbArgs}"],
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "(lldb) Launch Server",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/server",
      "args": ["erwin"],
      "cwd": "${workspaceFolder}",
    }
  ],
  "inputs": [
    {
      "id": "lldbArgs",
      "type":"promptString",
      "description": "args for lldb",
      "default": ""
    },
  ],
  "version": "2.0.0"
}